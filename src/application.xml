<icegrid>

  <application name="crobots">

    <node name="nodoUno">
      <server id="Cliente" exe="./Cliente.py" activation="always">
          <properties>
            <property name="Game" value="drobots2"/>
              <property name="Game.Locator" value="IceGrid/Locator -t:tcp -h atclab.esi.uclm.es -p 4061"/>
          </properties>
	    <adapter name="PlayerAdapter" endpoints="tcp">
	        <object identity="Paco" type="::drobots::Player" property="Identity"/>
	    </adapter>
         <adapter name="ContainerAdapter" endpoints="tcp">
            <object identity="Container" type="::Services::Container" property="Identity"/>
            <object identity="Robots" type="::Services::Container" property="Identity"/>
         </adapter>
      </server>
    </node>

     <node name="nodoDos">
      <server id="Factoria1" exe="./RobotController.py" activation="always">
	<adapter name="FactoriaAdapter" endpoints="tcp">
	  <object identity="RobotFactory1" type="::drobots::factory" property="Identity"/>
	</adapter>
      </server>
    </node>

     <node name="nodoTres">
      <server id="Factoria2" exe="./RobotController.py" activation="always">
	<adapter name="FactoriaAdapter" endpoints="tcp">
	  <object identity="RobotFactory2" type="::drobots::factory" property="Identity"/>
	</adapter>
      </server>
    </node>

     <node name="nodoCuatro">
      <server id="Factoria3" exe="./RobotController.py" activation="always">
	<adapter name="FactoriaAdapter" endpoints="tcp">
	  <object identity="RobotFactory3" type="::drobots::factory" property="Identity"/>
	</adapter>

      </server>
    </node>
  </application>

</icegrid>